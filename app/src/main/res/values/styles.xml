<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/primaryDisplayBtnTextColor</item>
        <item name="android:background">@drawable/primary_display_btn_background</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>

    </style>

    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/dividerColor</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

    <style name="WidgetDividerStyle" parent="DividerStyle">

    </style>

</resources>
