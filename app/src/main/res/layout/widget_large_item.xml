<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/widget_item_card"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="12dp">

    <ImageView
        android:id="@+id/widget_image_view"
        android:layout_width="@dimen/widget_single_text_drawable_image_dimensions"
        android:layout_height="@dimen/widget_single_text_drawable_image_dimensions"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/widget_item_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_string_name"
        android:textSize="@dimen/widget_text_size"
        android:maxLines="1"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/widget_item_number_type_text"
            android:text="@string/default_string_number_type"
            android:textSize="@dimen/widget_text_size"
            android:maxLines="1"/>

        <!--<TextView-->
        <!--android:id="@+id/widget_item_number_text"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/default_string_number"-->
        <!--android:textSize="@dimen/widget_text_size"/>-->

    </LinearLayout>

</LinearLayout>