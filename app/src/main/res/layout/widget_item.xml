<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/widget_item_card"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="12dp">

    <ImageView
        android:id="@+id/widget_image_view"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/widget_item_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_string_name"
        android:textSize="@dimen/widget_text_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/widget_item_number_type_text"
            android:text="@string/default_string_number_type"
            android:textSize="@dimen/widget_text_size"/>

        <!--<TextView-->
            <!--android:id="@+id/widget_item_number_text"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/default_string_number"-->
            <!--android:textSize="@dimen/widget_text_size"/>-->

    </LinearLayout>

</LinearLayout>